<% provide :title, t("signup") %>
<h1><%=t "layouts.users.signup" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, t(".confirmation_pass") %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t(".create_acc"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
